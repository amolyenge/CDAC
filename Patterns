1)

#include <iostream>
using namespace std;

int main() {
    int n = 5;  // number of rows
    for (int i = 1; i <= n; i++) {
        // spaces
        for (int s = i; s < n; s++) cout << " ";
        // increasing numbers
        for (int j = 1; j <= i; j++) cout << j;
        // decreasing numbers
        for (int j = i - 1; j >= 1; j--) cout << j;
        cout << endl;
    }
    return 0;
}

    1
   121
  12321
 1234321
123454321

