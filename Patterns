4)

#include <iostream>
using namespace std;

int main() {
    int n = 5; // rows
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            cout << char('A' + i - 1) << " ";
        }
        cout << endl;
    }
    return 0;
}

