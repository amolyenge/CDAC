    <title>TimerExample</title>

    <style>
        body {
            font-family: Algerian, sans-serif;
            text-align: center;
            margin-top: 50px;
        }

        h3 {
            color: black;
        }

        #timer {
            font-size: 48px;
            margin: 20px 0;
            font-weight: bold;
            color: lightseagreen;
        }

        button {
            background-color: darkturquoise;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 0 5px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: black;
        }

        button:active {
            background-color: #003d80;
        }

        button:disabled {
            background-color: #cccccc;
